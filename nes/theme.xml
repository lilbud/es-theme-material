<theme>
    <formatVersion>3</formatVersion>
    <include>./../material.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<color>ba0001</color>
		</image>

		<image name="logo">
			<path>./system.svg</path>
		</image>

	</view>

	<view name="basic, detailed, grid">

		<image name="logo">
			<path>./logo.svg</path>
			<color>FFFFFF</color>
		</image>

		<image name="header" extra="true">
			<color>ba0001</color>
		</image>

		<image name="footer" extra="true">
			<color>ba0001</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>ba0001</selectorColor>
		</textlist>

	</view>

	<view name="grid">

		<image name="righter, header, footer" extra="true">
			<color>ba0001</color>
		</image>

		<image name="logo">
			<path>./logo.svg</path>
			<pos>0.78 0.057</pos>
		</image>
		
		<gridtile name="selected">
			<backgroundColor>ba0001</backgroundColor>
		</gridtile>

		<image name="gridtile_background_selected">
			<color>ba0001</color>
		</image>

</view>

</theme>
