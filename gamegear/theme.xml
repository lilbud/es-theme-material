<theme>
    <formatVersion>3</formatVersion>
    <include>./../material.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<color>0099ff</color>
		</image>

		<image name="logo">
			<path>./system.svg</path>
		</image>

	</view>

	<view name="basic, detailed, grid">

		<image name="logo">
			<path>./logo.svg</path>
			<color>FFFFFF</color>
		</image>

		<image name="header" extra="true">
			<color>0099ff</color>
		</image>

		<image name="footer" extra="true">
			<color>0099ff</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>0099ff</selectorColor>
		</textlist>

	</view>

	<view name="grid">

		<image name="righter, header, footer" extra="true">
			<color>0099ff</color>
		</image>

		<image name="logo">
			<path>./logo.svg</path>
		</image>
		
		<gridtile name="selected">
			<backgroundColor>0099ff</backgroundColor>
		</gridtile>

		<image name="gridtile_background_selected">
			<color>0099ff</color>
		</image>

</view>

</theme>
