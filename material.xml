<theme>
    <formatVersion>4</formatVersion>

	<view name="system">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/box.png</path>
		</image>

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>

	</view>

	<view name="basic, detailed, grid">

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>393a3b</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.12 0.04</size>
			<pos>1 1</pos>
		</text>

		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
			<color>393a3b</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.14 0.04</size>
			<pos>1 1</pos>
		</text>

		<helpsystem name="help">
			<textColor>ffffffff</textColor>
			<iconColor>ffffffff</iconColor>
		</helpsystem>

		<datetime name="md_releasedate, md_lastplayed">
			<color>393a3b</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<size>0 0.04</size>
			<pos>1 1</pos>
		</datetime>

		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/box.png</path>
			<color>424242</color>
		</image> 

		<image name="header" extra="true">
			<path>./art/box.png</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
		</image>

		<image name="footer" extra="true">
			<path>./art/box.png</path>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
		</image>

		<image name="logo">
			<pos>0.5 0.03</pos>
			<maxSize>0.55 0.1</maxSize>
		</image>

	</view>

	<view name="basic">

		<textlist name="gamelist">
			<selectorColor>22313f</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontPath>./art/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>0</forceUppercase>
			<pos>0.025 0.18</pos>
			<size>0.950 0.73</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>

	</view>

	<view name="detailed">

		<textlist name="gamelist">
			<selectorColor>22313f</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontPath>./art/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>0</forceUppercase>
			<pos>0.550 0.28</pos>
			<size>0.360 0.50</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>	

		<image name="md_image">
			<pos>0.30 0.53</pos>
			<maxSize>0.500 0.501</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>

	<view name="grid">

		<image name="logo">
			<origin>0 0</origin>
			<pos>0.725 0.057</pos>
			<maxSize>0.26 0.1</maxSize>
		</image>

		<image name="righter" extra="true">
			<path>./art/box.png</path>
			<pos>.71 0</pos>
			<origin>0 0</origin>
			<size>.29 1</size>
		</image>

		<image name="header" extra="true">
			<path>null</path>
		</image>

		<image name="footer" extra="true">
			<path>./art/box.png</path>
		</image>

		<text name="md_grid">
			<pos>0.047 0.058</pos>
			<size>.6 .8</size>
		</text>
		
		<text name="md_title">
			<color>424242</color>
			<pos>1 1</pos>
		</text>
		

		<imagegrid name="gamegrid">
			<pos>0.047 0.118</pos>
			<size>.6 .8</size>
			<margin>0.03 0.03</margin>
			<autoLayout>4 3</autoLayout>
		</imagegrid>

		<gridtile name="default">
			<size>0.18 0.1775</size>
			<backgroundImage>./art/selector.png</backgroundImage>
			<backgroundColor>42424200</backgroundColor>
		</gridtile>

		<gridtile name="selected">
			<size>0.18 0.24</size>

		</gridtile>	

		<text name="md_name">
			<pos>0.347 0.02</pos>
			<origin>0.5 0</origin>
			<color>FFFFFF</color>
		</text>
		
		<text name="md_description">
			<color>ffffff</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.262 0.323</size>
			<pos>0.721 0.343</pos>
		</text>
		
		<text name="md_lbl_rating">
			<color>ffffff</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.12 0.04</size>
			<pos>0.721 0.17</pos>
		</text>
		
		<text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>ffffff</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.12 0.04</size>
		</text>
		
		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_releasedate">
			<color>ffffff</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.14 0.04</size>
		</text>

		<rating name="md_rating">
			<pos>0.78 0.175</pos>
			<size>0.028 0.028</size>
			<filledPath>./art/star_filled_spacing.svg</filledPath>
			<unfilledPath>./art/star_hollow_3_spacing.svg</unfilledPath>
		</rating>
		
		<text name="md_lbl_releasedate">
			<pos>0.721 0.22</pos>
			<size>0.12 0.04</size>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.8 0.22</pos>
		</datetime>
		
		<text name="md_lbl_players">
			<pos>0.721 0.27</pos>
			<size>0.12 0.04</size>
		</text>
		
		<text name="md_players">
			<pos>0.79 0.27</pos>
		</text>
		
		<image name="gridtile_background_selected" >
			<path>./art/selector.png</path>
		</image>
		
		<image name="gridtile_background">
			<path>./art/selector.png</path>
			<color>42424200</color>
		</image>
		
		<text name="gridtile_text">
			<color>00000000</color>
		</text>
		
		<container name="gridRowsAndColumns">
			<size>4 3</size>
		</container>
		
		<container name="md_grid_margin">
			<size>0.03 0.03</size>
		</container>

	</view>
	


</theme>
