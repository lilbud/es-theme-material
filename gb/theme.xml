<theme>
    <formatVersion>3</formatVersion>
    <include>./../material.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<color>2e3192</color>
		</image>

		<image name="logo">
			<path>./system.svg</path>
		</image>

	</view>

	<view name="basic, detailed, grid">

		<image name="logo">
			<path>./logo.svg</path>
			<color>FFFFFF</color>
		</image>

		<image name="header" extra="true">
			<color>2e3192</color>
		</image>

		<image name="footer" extra="true">
			<color>2e3192</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>2e3192</selectorColor>
		</textlist>

	</view>

	<view name="grid">

		<image name="righter, header, footer" extra="true">
			<color>2e3192</color>
		</image>

		<image name="logo">
			<path>./logo.svg</path>
		</image>

		<gridtile name="selected">
			<backgroundColor>2e3192</backgroundColor>
		</gridtile>

<!--		<ninepatch name="gridtile_background_selected">
			<color>2e3192</color>
		</ninepatch>
-->		
		<container name="gridRowsAndColumns">
			<size>4 3</size>
		</container>
		
		<image name="gridtile_background_selected">
			<color>2e3192</color>
		</image>

</view>

</theme>
