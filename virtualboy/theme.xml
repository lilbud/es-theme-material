<theme>
    <formatVersion>3</formatVersion>
    <include>./../material.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<color>ce021b</color>
		</image>

		<image name="logo">
			<path>./logo.svg</path>
		</image>

	</view>

	<view name="basic, detailed, grid">

		<image name="logo">
			<path>./logo.svg</path>
			<color>FFFFFF</color>
		</image>

		<image name="header" extra="true">
			<color>ce021b</color>
		</image>

		<image name="footer" extra="true">
			<color>ce021b</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>ce021b</selectorColor>
		</textlist>

	</view>

	<view name="grid">

		<image name="righter, header, footer" extra="true">
			<color>ce021b</color>
		</image>

		<image name="logo">
			<path>./system.svg</path>
			<pos>0.745 0.057</pos>
		</image>
		
		<gridtile name="selected">
			<backgroundColor>ce021b</backgroundColor>
		</gridtile>

		<image name="gridtile_background_selected">
			<color>ce021b</color>
		</image>
		
		<container name="gridRowsAndColumns">
			<size>4 3</size>
		</container>

</view>

</theme>
